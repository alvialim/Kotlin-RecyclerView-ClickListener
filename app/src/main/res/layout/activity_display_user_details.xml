<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="alimalvi.in.kotlinrecyclerview_itemclick.DisplayUserDetails">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Alim"
    android:id="@+id/display_username_textView"
    android:layout_centerInParent="true"
    android:textSize="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android Developer"
        android:id="@+id/display_jobtitle_textView"
        android:layout_centerInParent="true"
        android:layout_below="@id/display_username_textView"
        android:textSize="20dp"/>
</RelativeLayout>
